<?xml version="1.0"?>
<config>
    <modules>
        <ExtensionsMall_EmallTwitter>
            <version>2.2.0</version>
        </ExtensionsMall_EmallTwitter>
    </modules>
    <global>
        <resources>
            <extensionsmall_emalltwitter>
                <setup>
                    <module>ExtensionsMall_EmallTwitter</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </extensionsmall_emalltwitter>
        </resources>
        <models>
            <emalltwitter>
                <class>ExtensionsMall_EmallTwitter_Model</class>
            </emalltwitter>
        </models>
        <blocks>
            <emalltwitter>
                <class>ExtensionsMall_EmallTwitter_Block</class>
            </emalltwitter>
        </blocks>
 
        <helpers>
            <emalltwitter>
                <class>ExtensionsMall_EmallTwitter_Helper</class>
            </emalltwitter>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <emalltwitter>
                    <file>emalltwitter.xml</file>
                </emalltwitter>
            </updates>
        </layout>
    </frontend>
    <!--	START DEFAULTS	-->
    <default>
        <extensionsmall_emalltwitter>
            <twitter>
                <enabled>1</enabled>
                <twitter_feed></twitter_feed>
                <twitter_widget_id></twitter_widget_id>
                <twitter_width>500</twitter_width>
                <twitter_height>300</twitter_height>
                <twitter_tweet_limit></twitter_tweet_limit>
                <twitter_theme>light</twitter_theme>
                <twitter_tweets_link_color>#1b95e0</twitter_tweets_link_color>
                <twitter_chrome></twitter_chrome>
            </twitter>
            <twitter_style>
                <twitter_box_side>left</twitter_box_side>
                <twitter_box_top_position>150</twitter_box_top_position>
                <twitter_box_width>500</twitter_box_width>
                <twitter_box_height>300</twitter_box_height>
                <twitter_box_background>#3399cc</twitter_box_background>
            </twitter_style>
        </extensionsmall_emalltwitter>
    </default>
    <!--	END DEFAULTS	-->
</config>